<div class="card m-5 p-5">
<p style="color: green"><%= notice %></p>

<h1>Restaurants</h1>

<div id="restaurants">
  <% @restaurants.each do |restaurant| %>
    <%= render restaurant %>
    <p>
      <%= link_to "Show this restaurant", restaurant %>
    </p>
  <% end %>
</div>
<div class="btn btn-danger">
<%= link_to "New restaurant", new_restaurant_path, class: "link_to" %>
</div>

</div>
